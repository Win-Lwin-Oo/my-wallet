<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/top_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/item_background_style">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_style_black_24dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_toEndOf="@id/top_item_image"
        android:id="@+id/item_name_layout"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/item_price"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray"
            android:text="@string/app_name"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/item_date"
            android:layout_below="@id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorCyan"
            android:text="@string/app_name"
            android:textSize="10sp"/>

    </RelativeLayout>

        <TextView
            android:id="@+id/item_price"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorGray"
            android:layout_marginEnd="10dp"/>

</RelativeLayout>